<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.cloud.parent</groupId>
    <artifactId>z_cloud_parent</artifactId>
    <version>1.0.0-SNAPSHOT</version>
    <packaging>pom</packaging>

    <name>z_cloud_parent</name>
    <url>http://www.example.com</url>
    <description>Spring Cloud 多模块</description>

    <parent>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-parent</artifactId>
        <version>2.0.1.RELEASE</version>
        <relativePath/> <!-- lookup parent from repository -->
    </parent>

    <!-- 多模块-->
    <modules>
        <module>../z_cloud_service</module>
        <module>../z_cloud_web</module>
        <module>../z_cloud_commons</module>
    </modules>

    <properties>
        <java.version>1.8</java.version>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
        <maven.compiler.source>1.8</maven.compiler.source>
        <maven.compiler.target>1.8</maven.compiler.target>
        <z_cloud_commons-version>1.0.0-SNAPSHOT</z_cloud_commons-version>
        <z_cloud_service.version>1.0.0-SNAPSHOT</z_cloud_service.version>
        <z_cloud_web.version>1.0.0-SNAPSHOT</z_cloud_web.version>
        <guava.version>19.0</guava.version>
        <spring-context>5.1.7.RELEASE</spring-context>
        <zookeeper.version>3.4.13</zookeeper.version>
        <dubbo.starter.version>0.2.0</dubbo.starter.version>
        <shiro.version>1.4.0</shiro.version>
    </properties>

    <distributionManagement>
        <snapshotRepository>
            <id>nexus-snapshots</id>
            <name>Internal Snapshots</name>
            <url>
                http://nexus.fengxiaomi.com:8081/nexus/content/repositories/snapshots
            </url>
        </snapshotRepository>
        <repository>
            <id>opensesame.releases.account</id>
            <name>Internal Releases</name>
            <url>
                http://nexus.fengxiaomi.com:8081/nexus/content/repositories/releases
            </url>
        </repository>
    </distributionManagement>

    <!--依赖管理-->
    <dependencyManagement>
        <dependencies>
            <!--z_cloud_commons-->
            <dependency>
                <groupId>com.cloud.com.alibabacloud.commons</groupId>
                <artifactId>z_cloud_commons</artifactId>
                <version>${z_cloud_commons-version}</version>
            </dependency>
        </dependencies>
    </dependencyManagement>

</project>